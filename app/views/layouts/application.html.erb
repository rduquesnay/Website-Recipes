<!DOCTYPE html>
<html>
<head>
  <title>WebsiteRecipes</title>
  <%= stylesheet_link_tag "recipestyle" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
 <% [:info, :error, :notice ].each do |key| %>
   <% if flash[key] %>
   <div class="<%= key %>" id="flash">
     <%= flash[key] %>
   </div>
   <% end %>
 <% end %>

<%= yield %>

</body>
</html>
